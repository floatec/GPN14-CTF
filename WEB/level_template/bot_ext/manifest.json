{
  "manifest_version": 2,

  "name": "Client-Side Validation Bot",
  "description": "Vuln Validation Bot",
  "version": "1.0",

  "permissions": [
    "*://*/*",
    "tabs"
  ],

  "background": {
    "persistent": true,
    "page": "background.html"
  },

  "browser_action": {
    "default_icon": "bender.png",
    "default_popup": "popup.html"
  }
}
